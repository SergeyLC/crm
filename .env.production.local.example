# Production Secrets Template
# Copy this file to .env.production.local and fill in actual values
# NEVER commit .env.production.local to git!

# Database Connection (REQUIRED)
DATABASE_URL="postgresql://prod_user:STRONG_PASSWORD@your-db-host.com:5432/loya_care_crm_prod"

# JWT Secret (REQUIRED - generate with: openssl rand -hex 32)
JWT_SECRET="CHANGE_THIS_TO_RANDOM_32_CHAR_STRING_MIN"

# CORS Origin (REQUIRED)
CORS_ORIGIN="https://your-production-domain.com"

# Optional: Analytics
# NEXT_PUBLIC_GA_ID="UA-XXXXXXXXX-X"
# NEXT_PUBLIC_SENTRY_DSN="https://xxx@sentry.io/xxx"

# Optional: Email service
# SMTP_HOST="smtp.example.com"
# SMTP_PORT=587
# SMTP_USER="your-smtp-user"
# SMTP_PASSWORD="your-smtp-password"
