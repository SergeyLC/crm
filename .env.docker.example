# LoyaCareCRM Docker Environment Variables
# Copy this file to .env.dev for local development or .env.docker for production

# Database (Development)
POSTGRES_DB=loyacrm
POSTGRES_USER=loyacrm
POSTGRES_PASSWORD=dev_password_123

# Backend (Development)
DATABASE_URL=postgresql://loyacrm:dev_password_123@postgres:5432/loyacrm
JWT_SECRET=dev_jwt_secret_key_for_local_development_only
PORT=4003
NODE_ENV=development

# Frontend (Development)
NEXT_PUBLIC_API_URL=http://localhost:4003
NEXT_PUBLIC_APP_VERSION=docker-dev

# Production overrides (uncomment and modify for production):
# POSTGRES_PASSWORD=your_production_password
# DATABASE_URL=postgresql://loyacrm:your_production_password@postgres:5432/loyacrm
# JWT_SECRET=your_production_jwt_secret
# PORT=4002
# NODE_ENV=production
# NEXT_PUBLIC_API_URL=http://localhost:4002
# NEXT_PUBLIC_APP_VERSION=docker-prod