# LoyaCareCRM Docker Environment Variables
# Copy this file to .env.dev for local development or .env.docker for production

# Database (External - for Docker deployment)
DATABASE_URL=postgresql://user:password@external-db-host:5432/database_name

# Backend
JWT_SECRET=your_jwt_secret_key
CORS_ORIGIN=https://yourdomain.com
PORT=4002
NODE_ENV=production
PRISMA_LOG_LEVEL=warn
LOG_LEVEL=info

# Frontend
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_BACKEND_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_APP_VERSION=docker-prod
NEXT_TELEMETRY_DISABLED=1