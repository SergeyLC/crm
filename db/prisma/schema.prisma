generator client_backend {
  provider = "prisma-client-js"
  output   = "../generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String         @id @default(uuid())
  email            String         @unique
  name             String
  role             UserRole       @default(EMPLOYEE)
  status           UserStatus     @default(ACTIVE)
  password         String
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  assignedDeals    Deal[]         @relation("DealsAssignedToUser")
  createdDeals     Deal[]         @relation("DealsCreatedByUser")
  ledGroups        Group[]        @relation("GroupLeader")
  groupMemberships GroupMember[]  @relation("GroupMembers")
  notes            Note[]
  pipelines        PipelineUser[]
}

model Contact {
  id           String   @id @default(uuid())
  name         String
  organization String?
  email        String?
  phone        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deals        Deal[]
}

model Deal {
  id              String        @id @default(uuid())
  title           String?
  contactId       String
  creatorId       String
  assigneeId      String?
  productInterest String?
  potentialValue  Float?
  status          DealStatus    @default(ACTIVE)
  stage           DealStage     @default(LEAD)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  archivedAt      DateTime?
  appointments    Appointment[]
  assignee        User?         @relation("DealsAssignedToUser", fields: [assigneeId], references: [id])
  contact         Contact       @relation(fields: [contactId], references: [id])
  creator         User          @relation("DealsCreatedByUser", fields: [creatorId], references: [id])
  notes           Note[]
}

model Note {
  id        String   @id @default(uuid())
  creatorId String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  dealId    String
  creator   User     @relation(fields: [creatorId], references: [id])
  deal      Deal     @relation(fields: [dealId], references: [id])
}

model Appointment {
  id       String           @id @default(uuid())
  datetime DateTime
  type     AppointmentType?
  note     String?
  dealId   String
  deal     Deal             @relation(fields: [dealId], references: [id])
}

model Group {
  id          String          @id @default(uuid())
  name        String
  leaderId    String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  description String?
  leader      User            @relation("GroupLeader", fields: [leaderId], references: [id])
  members     GroupMember[]
  pipelines   PipelineGroup[]
}

model GroupMember {
  id       String    @id @default(uuid())
  groupId  String
  userId   String
  joinedAt DateTime  @default(now())
  role     GroupRole @default(MEMBER)
  group    Group     @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user     User      @relation("GroupMembers", fields: [userId], references: [id])
}

model Pipeline {
  id          String          @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  groups      PipelineGroup[]
  users       PipelineUser[]
}

model PipelineUser {
  id         String   @id @default(uuid())
  pipelineId String
  userId     String
  createdAt  DateTime @default(now())
  pipeline   Pipeline @relation(fields: [pipelineId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@unique([pipelineId, userId])
}

model PipelineGroup {
  id         String   @id @default(uuid())
  pipelineId String
  groupId    String
  createdAt  DateTime @default(now())
  group      Group    @relation(fields: [groupId], references: [id])
  pipeline   Pipeline @relation(fields: [pipelineId], references: [id])

  @@unique([pipelineId, groupId])
}

enum UserRole {
  ADMIN
  EMPLOYEE
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BLOCKED
}

enum DealStage {
  LEAD
  QUALIFIED
  CONTACTED
  DEMO_SCHEDULED
  PROPOSAL_SENT
  NEGOTIATION
  WON
  LOST
}

enum DealStatus {
  ACTIVE
  ARCHIVED
}

enum AppointmentType {
  CALL
  MEETING
  LUNCH
}

enum GroupRole {
  LEADER
  MEMBER
}
