{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@/tests/*": ["./tests/*"],
      "@/generated/*": ["./generated/*"]
    },
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "generated/prisma/**/*"],
  "exclude": ["node_modules", "dist"]
}